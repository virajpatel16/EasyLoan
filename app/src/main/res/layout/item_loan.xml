<!-- item_loan.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_270sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/slapscreenbg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_240sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_17sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_210sdp"
            android:layout_gravity="center"
            android:elevation="@dimen/_10sdp"
            android:layout_margin="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_10sdp">
            <ImageView
                android:id="@+id/delete"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="right|center_horizontal"
                android:layout_margin="@dimen/_6sdp"
                android:src="@drawable/delete_24dp_fill0_wght400_grad0_opsz24"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_6sdp"
                    android:text="Principal Amount :-"
                    android:textSize="@dimen/_13sdp" />


                <EditText
                    android:id="@+id/tv_principal_amount"
                    android:layout_width="@dimen/_280sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/black_border"
                    android:inputType="numberDecimal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_6sdp"
                    android:text="Interested Rate :-"
                    android:textSize="@dimen/_13sdp" />

                <EditText
                    android:id="@+id/tv_rate_of_interest"
                    android:layout_width="@dimen/_280sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/black_border"
                    android:inputType="numberDecimal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_6sdp"
                    android:text="Tenure for loan :-"
                    android:textSize="@dimen/_13sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/tv_tenure_years"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_7sdp"
                        android:layout_weight="1"
                        android:background="@drawable/black_border"
                        android:hint="Years"
                        android:inputType="numberDecimal"
                        android:textColorHint="@color/black" />

                    <EditText
                        android:id="@+id/tv_tenure_months"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_7sdp"
                        android:layout_weight="1"
                        android:background="@drawable/black_border"
                        android:hint="Month"
                        android:inputType="numberDecimal"

                        android:textColorHint="@color/black" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>
